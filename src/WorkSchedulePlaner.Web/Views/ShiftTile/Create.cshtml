@model WorkSchedulePlaner.Web.ViewModels.ShiftAssignmentVM

<div class="card">
	<div class="card-header text-center">
		<h3 class="card-title">Add Shift Tile</h3>
	</div>
	<div class="card-body">
		<form method="post" class="row">
			<input class="form-floating" asp-for="ShiftTile.Title" />
			<label for="ShiftTile.Title" class="ms-2">Title</label>
			<input class="form-floating" asp-for="ShiftTile.Description" />
			@*<label for="ShiftTile.Description" class="ms-2">Description</label>
			<select class="form-floating" asp-for="EmployeeId" asp-items="@ViewBag.Employees">
				<option>--Select Employee--</option>
			</select>*@
			<label for="EmployeeId" class="ms-2">Employee</label>
			<input class="form-floating" type="time" asp-for="StartTime" />
			<label for="StartTime" class="ms-2">Start Time</label>
			<input class="form-floating" type="time" asp-for="EndTime" />
			<label for="EndTime" class="ms-2">End Time</label>

			<input type="hidden" asp-for="EmployeeId" value="1" />
			<input type="hidden" asp-for="ShiftTile.Date" value="@ViewBag.Date" />
			<input type="hidden" asp-for="ShiftTile.ScheduleId" value="@ViewBag.ScheduleId" />

			<button type="submit" class="btn btn-success">Add Shift</button>
		</form>
	</div>
</div>
