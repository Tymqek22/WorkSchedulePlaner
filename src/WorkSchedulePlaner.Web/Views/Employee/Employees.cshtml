@using WorkSchedulePlaner.Application.DTOs
@model List<EmployeeDto>

<a class="btn btn-success" asp-controller="Employee" asp-action="Create" 
	asp-route-scheduleId="@ViewBag.ScheduleId">
	<i class="bi bi-plus-circle"></i>
	Add Employee
</a>
<a class="btn btn-info" asp-controller="Schedule" asp-action="Details" 
	asp-route-id="@ViewBag.ScheduleId">Return To Schedule</a>

<div class="card">
	<div class="card-header text-center">
		<h3 class="card-title">Employees</h3>
	</div>
	<div class="card-body">
		<table class="table">
			<thead>
				<tr>
					<th>Name</th>
					<th>Position</th>
					<th>Options</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var employee in Model)
				{
					<tr>
						<td>@employee.Name @employee.LastName</td>
						<td>@employee.Position</td>
						<td>
							<a class="btn btn-danger" asp-controller="Employee" asp-action="Delete"
							asp-route-scheduleId="@employee.ScheduleId" asp-route-employeeId="@employee.Id">Delete</a>
							<a class="btn btn-outline-info" asp-controller="Employee" asp-action="Update" 
							asp-route-scheduleId="@employee.ScheduleId" asp-route-employeeId="@employee.Id">
							Update</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
